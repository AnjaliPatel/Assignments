<apex:page standardController="Account" >
    <apex:outputPanel >
        <apex:form >
            <apex:outputText value="Enter new account:"></apex:outputText><br/>
            <apex:outputText value="Account Name:"></apex:outputText>
            <apex:inputField required="true" value="{!Account.Name}"/> 
            <apex:outputText value="Account Email ID:"></apex:outputText>
            <apex:inputField required="true" value="{!Account.PersonEmail__c}"/>  <br/>  
            <apex:commandButton action="{!save}" value="Save"/>
            <apex:commandButton immediate="true" action="/001" value="Cancel"/>
        </apex:form>   
    </apex:outputPanel>
</apex:page>